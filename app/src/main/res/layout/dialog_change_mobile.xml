<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E0F7FA"> <!-- Nền xanh nhạt -->

    <!-- Trường nhập số điện thoại mới -->
    <EditText
        android:id="@+id/etNewMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Mobile Number"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:fontFamily="sans-serif" />

    <!-- Nút xác nhận thay đổi số điện thoại -->
    <Button
        android:id="@+id/btnConfirmMobileChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Mobile Number"
        android:textColor="@android:color/white"
        android:backgroundTint="#00796B"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>
